                <input type="text"
                       placeholder="ชื่อผู้ใช้"
                       required
                       asp-for="C!.Username" />
            </div>
            <div>
                <input type="password"
                       placeholder="รหัสผ่าน"
                       required
                       asp-for="C!.Password" />
            </div>
            <div>
                <input hidden value="login" asp-for="C!.Provider" />
                <input type="submit" value="เข้าสู่ระบบ"/>
            </div>

            <p class="invalid-message">@Model.Message</p>
