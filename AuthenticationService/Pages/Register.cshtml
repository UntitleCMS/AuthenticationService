@page
@model AuthenticationService.Pages.RegisterModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}

<h2>Register</h2>

<form method="post">
    Username:
    <input asp-for="UserInfo!.UserName" /> <br/>
    Password:
    <input type="password" asp-for="UserInfo!.Password" /> <br/>

    <input type="submit" value="Register"/>

    <a asp-page="/Login" asp-all-route-data="@Model.Request.Query.Select(i=>new{Key=i.Key.ToString(),Value=i.Value.ToString()}).ToDictionary(i=>i.Key,i=>i.Value)">Register</a>
    <br />
    <p> @Model.Message </p>

    <br />
</form>
